<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<Button android:id="@+id/winscreen"
		android:layout_width="match_parent"
		android:layout_height="425dp"
		android:clickable="true"
		android:onClick="Level1"
		android:text="Continue"/>

    <p8.demo.p8sokoban.SokobanView android:id="@+id/SokobanView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <p8.demo.p8sokoban.SokobanLevel2 android:id="@+id/SokobanLevel2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginTop="350dp">

	<LinearLayout
		android:id="@+id/bt123"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin">


		<Button android:id="@+id/click1"
			android:textSize="30sp"
			android:text="1"
			android:clickable="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_above="@+id/click4"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />

		<Button android:id="@+id/click2"
			android:textSize="30sp"
			android:text="2"
			android:clickable="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_alignBaseline="@+id/btn1"
			android:layout_alignBottom="@+id/btn1"
			android:layout_toRightOf="@+id/btn1"
			android:layout_toEndOf="@+id/btn1" />

		<Button android:id="@+id/click3"
			android:textSize="30sp"
			android:text="3"
			android:clickable="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_alignBaseline="@+id/btn2"
			android:layout_alignBottom="@+id/btn2"
			android:layout_toRightOf="@+id/btn2"
			android:layout_toEndOf="@+id/btn2" />

		<Button android:id="@+id/click4"
			android:textSize="30sp"
			android:text="4"
			android:clickable="true"
			android:onClick="click4"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_below="@+id/click1"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />

		<Button android:id="@+id/click5"
			android:textSize="30sp"
			android:text="5"
			android:clickable="true"
			android:onClick="click5"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_below="@+id/click1"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />

		<!--<Button android:id="@+id/btndel"
            android:textSize="30sp"
            android:text="D"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/btn0"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
-->
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/bt456"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin">

		<Button android:id="@+id/click6"
			android:textSize="30sp"
			android:text="6"
			android:clickable="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_alignBaseline="@+id/click5"
			android:layout_alignBottom="@+id/click5"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />

		<Button android:id="@+id/click7"
			android:textSize="30sp"
			android:text="7"
			android:clickable="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_alignBaseline="@+id/click6"
			android:layout_alignBottom="@+id/click6"
			android:layout_toRightOf="@+id/click6"
			android:layout_toEndOf="@+id/click6" />

		<Button android:id="@+id/click8"
			android:textSize="30sp"
			android:text="8"
			android:clickable="true"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_alignBaseline="@+id/click7"
			android:layout_alignBottom="@+id/click7"
			android:layout_toRightOf="@+id/click7"
			android:layout_toEndOf="@+id/click7" />

		<Button android:id="@+id/click9"
			android:textSize="30sp"
			android:text="9"
			android:clickable="true"
			android:onClick="ClickNumber"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_alignBaseline="@+id/click8"
			android:layout_alignBottom="@+id/click8"
			android:layout_toRightOf="@+id/click8"
			android:layout_toEndOf="@+id/click8" />

		<Button android:id="@+id/clickdel"
			android:textSize="30sp"
			android:text="D"
			android:clickable="true"
			android:onClick="ClickNumber"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_alignBaseline="@+id/click9"
			android:layout_alignBottom="@+id/click9"
			android:layout_toRightOf="@+id/click9"
			android:layout_toEndOf="@+id/click9" />

		</LinearLayout>
	</LinearLayout>

	<Button android:id="@+id/menubtn"
		android:layout_width="79dp"
		android:layout_height="73dp"
		android:clickable="true"
		android:onClick="Menu1"
		android:text="II"
		android:layout_marginLeft="280dp" />

	<LinearLayout
		android:id="@+id/bt"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:weightSum="1">

	<LinearLayout
		android:id="@+id/bt33"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:weightSum="1">

		<LinearLayout
			android:id="@+id/bt2"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:weightSum="1"
			android:textSize="40sp">

		<TextView android:id="@+id/Score"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Score :"
			android:textSize="40sp"/>

		<TextView android:id="@+id/numScore"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="40sp"
			android:text="0"
			android:layout_marginLeft="80dp" />

		</LinearLayout>

		<TextView
			android:id="@+id/timerValue"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/pauseButton"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="37dp"
			android:textSize="40sp"
			android:text="@string/timerVal"
			android:weightSum="1" />

		</LinearLayout>
	</LinearLayout>


</FrameLayout>
